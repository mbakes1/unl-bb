generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Release {
  id          Int      @id @default(autoincrement())
  ocid        String   @unique // Open Contracting ID, for easy lookups
  releaseDate DateTime
  data        Json     // The full JSON blob of the release
  title       String?  // For full-text search
  buyerName   String?  // For filtering by buyer
  status      String?  // Tender status for filtering
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([releaseDate])
  @@index([buyerName])
  @@index([status])
  @@index([createdAt])
}
